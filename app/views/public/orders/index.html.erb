<div class="container">
    <label class="bg-secondary h4 ml-5 px-2">注文履歴一覧</label>
    <div class="row m-3">
        <table class="col table table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th class="px-0">注文日</th>
                    <th class="px-0">配送先</th>
                    <th class="px-0">注文商品</th>
                    <th class="px-0">支払金額</th>
                    <th class="px-0">注文詳細</th>
                </tr>
            </thead>
            
            <tbody>
                <% @orders.each do |order| %>
                    <tr class="border">
                        <td class="px-0"><%= order.created_at.strftime("%Y/%m/%d") %></td>
                        <td class="px-0">
                            〒<%= order.customer.postal_code %><br>
                            <%= order.customer.address %><br>
                            <%= order.customer.fullname %>
                        </td>
                        <td class="px-0">
                            <% order.order_items.each do |order_item| %>
                                <%= order_item.item.name %><br>
                            <% end %>
                        </td>
                        <td class="px-0"><%= order.billing_amount.to_s(:delimited) %>円</td>
                        <td class="d-flex justify-content-center border-0"><%= link_to "表示する", order_path(order), class: "btn btn-primary px-2" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>