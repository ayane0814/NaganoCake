<div class="container">
    <h2>注文履歴一覧</h2>
    <div class="row">
        <table class="col">
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>注文詳細</th>
            </tr>
            
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                    <td><%= order.customer.address_display %><br>
                        <%= order.customer.fullname %>
                    </td>
                    <td>
                        <% order.order_items.each do |order_item| %>
                            <%= order_item.item.name %><br>
                        <% end %>
                    </td>
                    <td><%= order.billing_amount.to_s(:delimited) %></td>
                    <td><%= link_to "表示する", order_path(order) %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>