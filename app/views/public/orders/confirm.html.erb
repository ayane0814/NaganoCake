<div class="container">
    <label class="bg-secondary h4 ml-5 px-2">注文情報確認</label>
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <tr class="table-secondary">
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= image_tag cart_item.item.get_item_image(50, 50) %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_included_price.to_s(:delimited) %></td>
                    <td><%= cart_item.amount %></td>
                    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                </tr>
                <% @total_amount += cart_item.subtotal %>
                <% end %>
            </table>
        </div>
        
        <div class="col-3">
            <table class="table table-bordered">
                <tr>
                    <th class="table-secondary">送料</th>
                    <td><%= @order.shipping_fee %></td>
                </tr>
                <tr>
                    <th class="table-secondary">商品合計</th>
                    <td><%= @total_amount.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <th class="table-secondary">請求額金額</th>
                    <% @order.billing_amount = @order.shipping_fee + @total_amount %>
                    <td><%= @order.billing_amount.to_s(:delimited) %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <table>
            <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
                <th>お届け先</th>
                <td class="lh-lg">
                    <%= current_customer.address_display %></br>
                    <%= current_customer.fullname %>
                </td>
            </tr>
        </table>
    </div>
    <div class="d-flex justify-content-center">
        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
            <%= f.hidden_field :customer_id %>
            <%= f.hidden_field :address_name %>
            <%= f.hidden_field :post_code %>
            <%= f.hidden_field :address %>
            <%= f.hidden_field :shipping_fee %>
            <%= f.hidden_field :billing_amount %>
            <%= f.hidden_field :payment_method %>
            <%= f.submit "注文を確定する", class: "btn btn-success px-4" %>
        <% end %>
    </div>
</div>