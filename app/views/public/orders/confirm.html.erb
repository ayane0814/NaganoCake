<h2>注文情報確認</h2>
<table>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= image_tag cart_item.item.get_item_image(100, 100) %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.add_tax_included_price.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    </tr>
    <% @total_amount += cart_item.subtotal %>
    <% end %>
</table>

<table>
    <tr>
        <th>送料</th>
        <td><%= @order.shipping_fee %></td>
    </tr>
    <tr>
        <th>商品合計</th>
        <td><%= @total_amount.to_s(:delimited) %></td>
    </tr>
    <tr>
        <th>請求額金額</th>
        <% @order.billing_amount = @order.shipping_fee + @total_amount %>
        <td><%= @order.billing_amount.to_s(:delimited) %></td>
    </tr>
</table>
<h3>支払方法</h3>
<div><%= @order.payment_method_i18n %></div>
<h3>お届け先</h3>
<div>
    <%= current_customer.address_display %></br>
    <%= current_customer.fullname %>
</div>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :customer_id %>
    <%= f.hidden_field :address_name %>
    <%= f.hidden_field :post_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :shipping_fee %>
    <%= f.hidden_field :billing_amount %>
    <%= f.hidden_field :payment_method %>
    <%= f.submit "注文を確定する" %>
<% end %>