<div class="container">
    <h2>注文履歴詳細</h2>
    <div class="row">
        <div class="col">
            <h3 class="row">注文情報</h3>
            <table class="row">
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
                </tr>
                
                <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.customer.address_display %></br>
                        <%= @order.customer.fullname %>
                    </td>
                </tr>
                
                <tr>
                    <th>支払方法</th>
                    <td><%= @order.payment_method_i18n %></td>
                </tr>
            </table>
        </div>
        <div class="col">
            <h3 class="row">請求情報</h3>
            <table class="row">
                <tr>
                    <th>商品合計</th>
                    <td><%= @total_item_amount.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <th>送料料</th>
                    <td><%= @order.shipping_fee %></td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td><%= @order.billing_amount.to_s(:delimited) %></td>
                </tr>
            </table>
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <h3 class="row">注文内容</h3>
            <table class="row">
                <tr>
                    <th>商品</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
                
                <% @order_items.each do |order_item| %>
                <tr>
                    <td><%= order_item.item.name %></td>
                    <td><%= order_item.uniti_price_including_tax %></td>
                    <td><%= order_item.quantity %></td>
                    <td><%= order_item.subtotal.to_s(:delimited) %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>