<div class="container my-5">
  <h4 class="col-2 bg-secondary text-center p-0">新規会員登録</h4>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <tr>
        <th>名前</th>
          <td>
            (姓)
            <%= f.text_field :last_name %>
          </td>
          <td>
            (名)
            <%= f.text_field :first_name %>
          </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          (セイ)
          <%= f.text_field :last_name_kana %>
        </td>
        <td>
          (メイ)
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td>
          <%= f.text_field :postal_code %>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td colspan="2">
          <%= f.text_field :address, size: "60x20" %>
        </td>
      </tr>
      <tr>
        <th>電話番号(ハイフンなし)</th>
        <td>
          <%= f.text_field :telephone_number %>
        </td>
      </tr>
      <tr>
        <th>パスワード(6文字以上)</th>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th>パスワード(確認用)</th>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= f.submit "新規登録", class: "btn btn-success d-grid gap-2 col-8" %>
        </td>
      </tr>
    </table>
    <h4 class="col-5 bg-secondary text-center p-0 mt-3">すでに登録済みの方</h4>
    <%= render "public/shared/links" %>
    <% end %>
  </div>
</div>