<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <label>名前　　　　　　　　　（姓）</label>
      </div>
      
      <div class="col">
        <div class="form-group row">
          <div class="col-auto">
            <%= f.text_field :last_name %>
          </div>
          
          <div class="col">
            <label>（名）</label>
            <%= f.text_field :first_name %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>フリガナ　　　　　　　（セイ）</label>
      </div>
      
      <div class="col-7">
        <div class="form-group row">
          <div class="col-auto">
            <%= f.text_field :last_name_kana %>
          </div>
          
          <div class="col-auto">
            <label>（メイ）</label>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>メールアドレス</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>郵便番号（ハイフンなし）</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>住所</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.text_field :address %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>電話番号（ハイフンなし）</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>パスワード（6文字以上）</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <label>パスワード（確認用）</label>
      </div>
      
      <div class="form-group col-auto">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    
    <div class="actions row">
      <div class="col">
        <%= f.submit "新規登録" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
