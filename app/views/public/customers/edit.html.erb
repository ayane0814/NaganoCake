<div class="container">
    <h2>会員情報編集</h2>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
    <div class="row form-group">
        <label class="col-3">氏名</label>
        <div class="col-auto">
            <%= f.text_field :last_name %>
        </div>
        <div class="col">
            <%= f.text_field :first_name %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col-3">フリガナ</label>
        <div class="col-auto">
            <%= f.text_field :last_name_kana %>
        </div>
        <div class="col">
            <%= f.text_field :first_name_kana %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col-3">郵便番号</label>
        <div class="col">
            <%= f.text_field :postal_code %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col-3">住所</label>
        <div class="col-6">
            <%= f.text_field :address, style: "width: 100%" %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col-3">電話番号</label>
        <div class="col">
            <%= f.text_field :telephone_number %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col-3">メールアドレス</label>
        <div class="col">
            <%= f.email_field :email %>
        </div>
    </div>
    
    <div class="row">
        <div class="col-2 offset-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success px-4" %>
        </div>
        <div class="col-2 offset-2">
            <%= link_to "退会する", confirm_customers_path, class: "btn btn-danger px-3" %>
        </div>
    </div>
    <% end %>
</div>