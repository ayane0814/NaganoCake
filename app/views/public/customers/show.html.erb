<div class="container">
    <h2>マイページ</h2>
    <div class="row">
        <div class="col">
            <h3>登録情報</h3>
        </div>
        <div class="col">
            <%= link_to "編集する", edit_customer_path %>
        </div>
    </div>
    
    <div class="row">
        <table>
            <tr>
                <th>氏名</th>
                <td><%= @customer.fullname %></td>
            </tr>
            
            <tr>
                <th>カナ</th>
                <td><%= @customer.fullname_kana %></td>
            </tr>
            
            <tr>
                <th>郵便番号</th>
                <td><%= @customer.postal_code %></td>
            </tr>
            
            <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
            </tr>
            
            <tr>
                <th>電話番号</th>
                <td><%= @customer.telephone_number %></td>
            </tr>
            
            <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
            </tr>
        </table>
    </div>
    
    <div class="row">
        <div class="col">
            <h3>注文履歴</h3>
        </div>
        <div class="col">
            <%= link_to "一覧を見る", orders_path %>
        </div>
    </div>
</div>