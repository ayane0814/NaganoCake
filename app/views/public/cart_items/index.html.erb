<div class="container">
    <div class="row">
        <div class="col">
            <h2>ショッピングカート</h2>
            <table>
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th></th>
                </tr>
                
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= image_tag cart_item.item.get_item_image(100, 100) %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_included_price %></td>
                    <td>
                        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                            <%= f.select :amount, *[1..10] %>
                            <%= f.submit "変更" %>
                        <% end %>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>