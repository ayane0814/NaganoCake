<div class="container">
    <div class="row">
        <div class="col">
            <div class="row">
                <h4 class="col-3 bg-secondary text-center p-0">ショッピングカート</h4>
                <div class="col offset-7 mb-2">
                    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
                </div>
            </div>
            
            <table class="table table-bordered">
                <tr class="table-secondary">
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th></th>
                </tr>
                
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= image_tag cart_item.item.get_item_image(50, 50) %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_included_price.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                            <%= f.select :amount, *[1..10], class: "form-select custom-select" %>
                            <%= f.submit "変更", class: "btn btn-success" %>
                        <% end %>
                    </td>
                    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                    <td class="d-flex justify-content-center pt-3 pb-4"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
                </tr>
                <% @total_amount += cart_item.subtotal %>
                <% end %>
            </table>
            <div class="row">
                <div class="col-2 offset-1 p-0">
                    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
                </div>
                <table class="col-2 offset-7 table table-bordered">
                    <tr>
                        <th class="table-secondary">合計金額</th>
                        <td><%= @total_amount.to_s(:delimited) %></td>
                    </tr>
                </table>
            </div>
            <div class="d-flex justify-content-center">
                <% unless @total_amount == 0 %>
                    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success px-4" %>
                <% end %>
            </div>
        </div>
    </div>
</div>