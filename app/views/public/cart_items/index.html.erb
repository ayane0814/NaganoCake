<div class="container">
    <div class="row">
        <div class="col">
            <div class="row">
                <h2>ショッピングカート</h2>
            <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>
            </div>
            <div>
                
            </div>
            <table>
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th></th>
                </tr>
                
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= image_tag cart_item.item.get_item_image(100, 100) %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_included_price.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                            <%= f.select :amount, *[1..10] %>
                            <%= f.submit "変更" %>
                        <% end %>
                    </td>
                    <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                    <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>
                </tr>
                <% @total_amount += cart_item.subtotal %>
                <% end %>
            </table>
                <%= link_to "買い物を続ける", items_path %>
                合計金額<%= @total_amount.to_s(:delimited) %>
                <div class="row">
                    <%= link_to "注文情報入力に進む", new_order_path %>
                </div>
            </div>
        </div>
    </div>
</div>