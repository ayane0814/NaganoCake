<div class="container my-5">
  <h4 class="col-2 bg-secondary text-center p-0">ログイン</h4>

  <h5 class="col-4 bg-secondary text-center p-0">会員の方はこちらからログイン</h5>
  <div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <table class="table table-borderless">
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "60x20" %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.password_field :password, autocomplete: "current-password",size: "60x20" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: "btn btn-primary d-grid gap-2 col-5" %></td>
        </tr>
      </table>
  
  <h5 class="col-5 bg-secondary text-center p-0">会員登録がお済でない方</h5>
  <%= render "public/shared/links" %>
  <% end %>
</div>