<div class="container">
    <div>
        <h2>
            商品一覧<span>(全<%= @items.count %>件)</span>
        </h2>
    </div>
    
    <div class="row">
        <% @items.each do |item| %>
            <%= link_to(item_path(item.id)) do %>
                <div class="col">
                    <div>
                        <%= image_tag item.get_item_image(200, 200) %>
                    </div>
                    <label><%= item.name %></label>
                    <div>
                        <%= item.add_tax_included_price.to_s(:delimited) %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
    <%= paginate @items %>
</div>