<div class="container pb-5">
    <div class="row">
        <div class="col">
            <%= image_tag @item.get_item_image(200, 200) %>
        </div>
        
        <div class="col">
            <h2 class="row ">
                <%= @item.name %>
            </h2>
            
            <p class="row mb-5">
                <%= @item.introduction %>
            </p>
            
            <div class="h2">
                ￥<%= @item.add_tax_included_price.to_s(:delimited) %><span class="h6">(税込)</span>
            </div>
            
            <%= form_with model: @cart_item, url: cart_items_path(@cart_item), method: :post do |f| %>
            <div class="row">
                <div class="col">
                    <%= f.hidden_field :item_id, :value => @item.id %>
                    <%= f.select :amount, options_for_select((1..10).to_a), {prompt: '個数選択'}, class: "form-select custom-select" %>
                </div>
                <div class="col">
                    <%= f.submit "カートに入れる", class: "btn btn-success mb-5" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>