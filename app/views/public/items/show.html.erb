<div class="container">
    <div class="row">
        <div class="col">
            <%= image_tag @item.get_item_image(200, 200) %>
        </div>
        
        <div class="col">
            <div class="row">
                <%= @item.name %>
            </div>
            
            <div class="row">
                <%= @item.introduction %>
            </div>
            
            <div class="row">
                ￥<%= @item.add_tax_included_price.to_s(:delimited) %><span>（税込）</span>
            </div>
            
            <div class="row">
                <%= link_to "カートに入れる", edit_admin_item_path %>
            </div>
        </div>
    </div>
</div>