<div class="container">
    <div>
        <h2>会員一覧</h2>
    </div>
    
    <div class="row">
        <table>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
            
            <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
                <td><%= customer.email %></td>
                <td><%= customer.status_label %></td>
            </tr>
            <% end %>
        </table>
    </div>
    <div>
        <%= paginate @customers %>
    </div>
</div>