<div class="container">
    <div>
        <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    </div>
    
    <div class="row-12">
        <div class="row">
            <div class="col">
                <label>会員ID</label>
            </div>
            <div class="col">
                <%= @customer.id %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>氏名</label>
            </div>
            <div class="col">
                <%= @customer.fullname %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>フリガナ</label>
            </div>
            <div class="col">
                <%= @customer.fullname_kana %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>郵便番号</label>
            </div>
            <div class="col">
                <%= @customer.postal_code %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>住所</label>
            </div>
            <div class="col">
                <%= @customer.address %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>電話番号</label>
            </div>
            <div class="col">
                <%= @customer.telephone_number %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>メールアドレス</label>
            </div>
            <div class="col">
                <%= @customer.email %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <label>会員ステータス</label>
            </div>
            <div class="col">
                <%= @customer.status_label %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <%= link_to "編集する", edit_admin_customer_path(@customer) %>
            </div>
            <div class="col">
                <%= link_to "注文履歴一覧", admin_root_path %>
            </div>
        </div>
    </div>
</div>