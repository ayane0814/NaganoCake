<div class="container">
    <label class="bg-secondary h4 ml-5 px-2 mb-3"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</label>
    
    <%= form_with model: [:admin, @customer] do |f| %>
        <div class="row">
            <label class="col-3">会員ID</label>
            <div class="col">
                <%= @customer.id%>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">氏名</label>
            <div class="col-auto">
                <%= f.text_field :last_name %>
            </div>
            <div class="col">
                <%= f.text_field :first_name %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">フリガナ</label>
            <div class="col-auto">
                <%= f.text_field :last_name_kana %>
            </div>
            <div class="col">
                <%= f.text_field :first_name_kana %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">郵便番号</label>
            <div class="col">
                <%= f.text_field :postal_code %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">住所</label>
            <div class="col-7">
                <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">電話番号</label>
            <div class="col">
                <%= f.text_field :telephone_number %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">メールアドレス</label>
            <div class="col">
                <%= f.email_field :email %>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="col-3">会員ステータス</label>
            <div class="col-auto">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効", {value: true} %>
            </div>
            <div class="col">
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "退会", {value: false} %>
            </div>
        </div>
        
        <div class="d-flex justify-content-center">
            <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
        </div>
    <% end %>
</div>