<div class="container">
    <label class="bg-secondary h4 ml-5 px-2">注文履歴一覧</label>
    <div class="row d-flex justify-content-center">
        <table class="col-8 table">
            <tr class="table-secondary">
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
            </tr>
            
            <% @orders.each do |order| %>
            <tr>
                <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order), class: "text-dark" %></td>
                <td><%= order.customer.fullname %></td>
                <td><%= order.order_items.sum(:quantity) %></td>
            </tr>
            <% end %>
        </table>
    </div>
    <div class="d-flex justify-content-center">
        <%= paginate @orders %>
    </div>
</div>
