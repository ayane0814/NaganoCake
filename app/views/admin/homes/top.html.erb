<div class="container">
    <label class="bg-secondary h4 ml-5 px-2">注文履歴一覧</label>
    <div class="row">
        <table class="col table table-bordered">
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
            </tr>
            
            <% @orders.each do |order| %>
            <tr>
                <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order) %></td>
                <td><%= order.customer.fullname %></td>
                <td><%= order.order_items.sum(:quantity) %></td>
            </tr>
            <% end %>
        </table>
    </div>
    <%= paginate @orders %>
</div>
