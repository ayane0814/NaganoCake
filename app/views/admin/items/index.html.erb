<div class="container">
    <div class="row">
        <div class="col">
            <h2>商品一覧</h2>
        </div>
        
        <div class="col">
            <%= link_to "+", new_admin_item_path %>
        </div>
    </div>
    
    <div class="row">
        <table>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
            </tr>
            
            <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price.to_s(:delimited) %></td>
            </tr>
            <% end %>
        </table>
    </div>
    <%= paginate @items %>
</div>