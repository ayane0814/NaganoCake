<div class="container">
    <div>
        <h2>商品編集</h2>
    </div>
    
    <div class="row">
        <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
            <div class="form-group row">
                <div class="col">
                    <label>商品画像</label>
                </div>
                <div class="col">
                    <%= f.file_field :item_image, accept: "image/*" %>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col">
                    <label>商品名</label>
                </div>
                <div class="col">
                    <%= f.text_field :name %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                        <label>商品説明</label>
                </div>
                <div class="col">
                    <%= f.text_area :introduction %>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col">
                    <label>税抜価格</label>
                </div>
                <div class="col">
                    <div class="input-group">
                        <%= f.number_field :price, class: "form-control" %>
                        <div class="input-group-append">
                            <span>円</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <%= f.submit "変更を保存" %>
            </div>
        <% end %>
    </div>
</div>