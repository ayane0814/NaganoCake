<div class="container">
    <h3>商品新規登録</h3>
    
    <div class="row">
        <%= form_with model: @item do |f| %>
        <div class="form-group row">
            <div class="col">
                <label>商品画像</label>
            </div>
            <div class="col">
                <%= f.file_field :item_image, accept: "image/*" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col">
                <label>商品名</label>
            </div>
            <div class="col">
                <%= f.text_field :name %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                    <label>商品説明</label>
            </div>
            <div class="col">
                <%= f.text_area :introduction %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col">
                <label>税抜価格</label>
            </div>
            <div class="col">
                <%= f.number_field :price %>
            </div>
        </div>
        
        <div class="row">
            <%= f.submit "新規登録" %>
        </div>
        <% end %>
    </div>
</div>